{
  "name": "todos-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.8",
    "@types/pg": "^8.10.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "dev": "tsnd --respawn --transpile-only ./src/main/server.ts",
    "dev:db": "tsnd --respawn --transpile-only ./src/database/index.ts",
    "build": "npx tsc",
    "start": "node ./dist/main/server.js",
    "migration:create": "npx typeorm migration:create ./src/database/migrations/Nome-Arquivo-Migration",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:run": "npm run typeorm migration:run -- -d src/main/config/database.config.ts"
  }
}
